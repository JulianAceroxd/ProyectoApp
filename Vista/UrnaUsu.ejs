            <% Datos.forEach(function (Datos){ %>
           

               
                <div class="contnomde">
                <h1 class="bot"><%=Datos.NomUrna%></h1>
                <p class="bot"><%=Datos.DesUrna%></p>
               
                <div class="botn"><input class="botons" type="button" value="Ver Urna" id="evento" class="Confirmar"></div>
               
