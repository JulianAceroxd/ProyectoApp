    <script>
        let =url='/partidos'
        fetch(url)
        .then(Response=>Response.json())
        .then(data=>mostrarDatos(data))
        .catch(error=>console.log(error))
        const mostrarDatos=(data)=>{
        console.log(data)
        let body=''
        for(i=0; i<data.length;i++){
            body+=`
                
                        <li><a href="/partido/${data[i].IdPartido}">${data[i].NomPartido}</a></li>
                    
                            `
                    

        }
        document.getElementById('partidos').innerHTML=body
        console.log(body)
    }
    </script>
       
    <div class="contenedor">
        <div class="fonf">
            <a class="titu">FOROS DISPONIBLES</a>
        </div>
        <ul class="op">
            <% Datos.forEach(function (Datos){ %>
            <li><a href="/DeForosUsu/<%=Datos.IdForo%>"><%=Datos.NomForo%></a></li>
           
            
<%})%>
        </ul>
    </div>
  
